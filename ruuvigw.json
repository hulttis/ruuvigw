{
  "COMMON": {
    "nameservers": [
      "8.8.8.8",
      "8.8.4.4"
    ],
    "hostname": ""
  },
  "INFLUX": [
    {
      "enable": true,
      "name": "influx1",
      "host": "influxhost1",
      "port": 8086,
      "ssl": false,
      "ssl_verify": false,
      "database": "ruuvi_db1",
      "username": "user1",
      "password": "passwd1",
      "timeout": 5.0,
      "retries": 2,
      "POLICY": {
        "name": "oneyear",
        "duration": "365d",
        "replication": 1,
        "default": true,
        "alter": false
      }
    },
    {
      "enable": true,
      "name": "influx2",
      "host": "influxhost2",
      "port": 8087,
      "ssl": true,
      "ssl_verify": false,
      "database": "ruuvi_db2",
      "username": "user2",
      "password": "passwd2",
      "POLICY": {
        "name": "oneweek",
        "duration": "7d",
        "replication": 1,
        "default": true,
        "alter": false
      }
    }
  ],
  "MQTT": [
    {
      "enable": true,
      "name": "mqtt1",
      "client_id": "mqtt-1",
      "host": "mqtt://user1:passwd1@mqtt1:1883",
      "topic": "ha/ruuvi",
      "retain": false,
      "adtopic": "homeassistant/sensor/ruuvi",
      "adretain": true,
      "anntopic": "ha/ruuvi/announce",
      "qos": 1
    },
    {
      "enable": true,
      "name": "mqtt2",
      "client_id": "mqtt-2",
      "host": "mqtt://user2:passwd2@mqtt2:1883",
      "topic": "ruuvi",
      "retain": false,
      "adtopic": "homeassistant/sensor/ruuvi",
      "adretain": true,
      "anntopic": "ruuvi/announce",
      "qos": 1,
      "cafile": "./certs/ca.crt",
      "check_hostname": false,
      "ADFIELDS": {
        "temperature": {
          "unit_of_meas": "C",
          "dev_cla": "temperature",
          "val_tpl": "{{ value_json.temperature | float | round(2) }}"
        },
        "humidity": {
          "unit_of_meas": "%",
          "dev_cla": "humidity",
          "val_tpl": "{{ value_json.humidity | float | round(2) }}"
        },
        "pressure": {
          "unit_of_meas": "hPa",
          "dev_cla": "pressure",
          "val_tpl": "{{ value_json.pressure | float | round(0) }}"
        },
        "batteryVoltage": {
          "unit_of_meas": "V",
          "dev_cla": "battery",
          "val_tpl": "{{ value_json.batteryVoltage | float / 1000 | round(1) }}"
        }
      }
    }    
  ],
  "RUUVITAG": {
    "name": "ruuvitag",
    "ruuviname": "ruuvi",
    "sample_interval": 1000,
    "device_timeout": 10000,
    "sudo": true,
    "whtlist_from_tags": true,
    "TAGS": {
      "C4:E4:4D:4C:8D:6F": "100outsideback",
      "D0:C3:32:E0:7D:E4": "100sauna",
      "E2:4E:ED:AE:25:C1": "100livingroom",
      "DD:47:A6:E2:2E:41": "100bedroom",
      "F4:48:56:ED:D3:E6": "101outsideterrace",
      "DD:AF:11:3A:89:54": "101outsidesauna",
      "DC:3D:08:AA:0D:2C": "101equipmentroom",
      "F8:23:CA:83:BA:C1": "101livingroom",
      "FE:BB:E1:3A:8C:BB": "101upstairs",
      "CC:8F:FE:35:AF:AC": "101bedroom",
      "CB:D7:18:26:DA:B4": "102livingroom",
      "D2:C2:5E:F0:11:D1": "102bedroom"
    },
    "WHTLIST": [
    ],
    "BLKLIST": [
    ]
  },
  "RUUVI": {
    "name": "ruuvi",
    "max_interval": 60,
    "MEASUREMENTS": [
      {
        "name": "ruuvi_int",
        "calcs": true,
        "OUTPUT": [
          "influx1",
          "influx2"
        ],
        "FIELDS": {
          "temperature": "temperature",
          "humidity": "humidity",
          "pressure": "pressure",
          "acceleration": "accelerationTotal",
          "acceleration_x": "accelerationX",
          "acceleration_y": "accelerationY",
          "acceleration_z": "accelerationZ",
          "battery": "batteryVoltage",
          "tx_power": "txPower",
          "movement_counter": "movementCounter",
          "sequence_number": "measurementSequenceNumber",
          "tagID": "tagID",
          "rssi": "rssi"
        }
      },
      {
        "name": "ruuvi_mqtt1",
        "calcs": false,
        "OUTPUT": [
          "mqtt1"
        ],
        "FIELDS": {
          "temperature": "temperature",
          "humidity": "humidity",
          "pressure": "pressure",
          "battery": "batteryVoltage"
        }
      },
      {
        "name": "ruuvi_mqtt2",
        "calcs": false,
        "OUTPUT": [
          "mqtt2"
        ],
        "FIELDS": {
          "temperature": "temperature",
          "humidity": "humidity"
        }
      }
    ]
  }
}
